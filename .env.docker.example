# Docker Compose Environment Variables
# Copy to .env for local docker-compose development

NODE_ENV=development
LOG_LEVEL=debug
ENABLE_HTTP_LOGS=true

# Database (PostgreSQL)
DB_USER=lean_rpg_user
DB_PASSWORD=lean_rpg_password
DB_NAME=lean_rpg_dev

# Authentication
JWT_SECRET=your-super-secret-key-change-in-production-immediately
JWT_EXPIRY=1h

# CORS
CORS_ORIGIN=http://localhost:3000

# Gemini AI (Optional)
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_TIMEOUT=30000
GEMINI_MAX_RETRIES=2

# Circuit Breaker (Gemini API resilience)
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RESET_TIMEOUT=60000

# Bull Queue (Async job processing)
BULL_QUEUE_MAX_RETRIES=3
BULL_QUEUE_RETRY_DELAY=2000
BULL_QUEUE_JOB_TIMEOUT=120000
BULL_QUEUE_MAX_CONCURRENCY=5
