# Server
NODE_ENV=development
PORT=3001
HOST=0.0.0.0
APP_NAME="Lean RPG Backend"

# Logging
LOG_LEVEL=debug  # error, warn, info, debug
ENABLE_HTTP_LOGS=true

# Database
DATABASE_URL=file:./dev.db

# Auth
JWT_SECRET=your-secret-key-here
JWT_EXPIRY=1h

# CORS
CORS_ORIGIN=http://localhost:3000

# Gemini
GEMINI_API_KEY=your-api-key-here
GEMINI_TIMEOUT=30000          # milliseconds
GEMINI_MAX_RETRIES=2          # number of retries (3 attempts total)

# Circuit Breaker
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5    # Open after N failures
CIRCUIT_BREAKER_RESET_TIMEOUT=60000    # Reset after N ms (1 minute)

# Redis
REDIS_URL="redis://localhost:6379"
